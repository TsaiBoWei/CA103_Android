<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    android:layout_margin="6dp"
    android:padding="6dp"
    android:id="@+id/cardview_plan"
    android:orientation="horizontal"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#4286f4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivPlanLogo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toTopOf="@+id/tvPlanStartDate"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPlanStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvPlanTitle"
            android:layout_alignParentStart="true"
            android:text="testdate"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="15dp"
            card_view:layout_constraintBottom_toTopOf="@+id/tvPlanTitle"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/ivPlanLogo" />

        <TextView
            android:id="@+id/tvPlanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:text="testtitle"
            android:textSize="20sp"
            card_view:layout_constraintStart_toEndOf="@+id/tvPlanStartDate"
            card_view:layout_constraintTop_toBottomOf="@+id/tvPlanStartDate" />


    </RelativeLayout>
</android.support.v7.widget.CardView>